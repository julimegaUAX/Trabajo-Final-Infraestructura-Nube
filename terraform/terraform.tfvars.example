# Configuración de ejemplo para desarrollo
# Copiar este archivo a terraform.tfvars y ajustar según necesidad

aws_region = "us-east-1"
environment = "production"
project_name = "cloudedu-services"

# Configuración de red
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]

# Configuración de EKS
eks_cluster_version = "1.28"
eks_node_instance_types = ["t3.medium"]
eks_node_desired_size = 2
eks_node_min_size = 1
eks_node_max_size = 4

# Configuración de seguridad
# IMPORTANTE: En producción, restringir estos CIDRs
allowed_ssh_cidrs = ["0.0.0.0/0"]
allowed_http_cidrs = ["0.0.0.0/0"]

# Características opcionales
enable_nat_gateway = true
enable_vpn_gateway = false
enable_dns_hostnames = true
enable_dns_support = true

# Tags adicionales
tags = {
  Team = "DevOps"
  CostCenter = "Engineering"
  Project = "CloudEdu Services"
}
